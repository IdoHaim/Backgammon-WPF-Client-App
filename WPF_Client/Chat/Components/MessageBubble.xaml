<UserControl x:Class="WPF_Client.Chat.Components.MessageBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Client.Chat.Components"
             mc:Ignorable="d" 
             d:DesignHeight="38" d:DesignWidth="160">
    <Border x:Name="BubbleBorder"
            Background="Wheat"
            CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="8"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="MessageCentent" 
                       Grid.Row="0"
                       Margin="6"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="14"
                       Text="Hello"/>


            <TextBlock x:Name="TimeView" 
                       Grid.Row="1"
                       FontSize="6"
                       Margin="0,0,8,1"
                       Text="12:00"
                       Foreground="#3b3b3b" TextAlignment="Right"/>

        </Grid>
        
    </Border>
</UserControl>
